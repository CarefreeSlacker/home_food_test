= simple_form_for @post do |f|
	= f.input :name
	= f.input :text
	= f.association :categories, input_html: { id: 'dropdown' }, as: :check_boxes
	= link_to 'Reject', posts_path, class: 'btn btn-danger'
	= f.submit 'Publish', class: 'btn btn-success'
	= f.submit 'Save draught', class: 'btn btn-primary'
	br
	br
	= f.submit 'Delayed publishing', class: 'btn btn-info'
	br
	= f.input :publish_time, start_year: Date.today.year, 
							 start_month: Date.today.month, 
							 start_day: Date.today.day
